<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.native_lib">

    <application android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
    >
        <!-- Use Android's built-in NativeActivity so no Java/Kotlin Activity is required. -->
        <activity android:name="android.app.NativeActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:exported="true"
            android:configChanges="orientation|screenSize">

            <!-- Name of the native library (libmain.so -> "main") -->
            <meta-data android:name="android.app.lib_name" android:value="native_lib" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>